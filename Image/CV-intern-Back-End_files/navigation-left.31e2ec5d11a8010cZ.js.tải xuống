$(document).ready(function(){var t,n=!1;function a(){var t="open-dropdown";$(".navbar-desktop .navigation-left__dropdowns").removeClass(t),$(".navbar-desktop .navigation-left__item-sub-menu").removeClass(t),$(".navbar-desktop .navigation-left__item").removeClass(t)}function e(){$(".navbar-desktop .navigation-left__item").off("mouseenter"),$(".navbar-desktop .navigation-left-container").off("mouseleave")}function o(){if(window.innerWidth<=1200)return n&&e(),a(),void(n=!1);var t=$(".navbar-desktop .navigation-left__item"),o=$(".navbar-desktop .navigation-left__dropdowns");t.length&&o.length&&(function(){var t=$(".navbar-desktop .navigation-left__item").first(),n=$(".navbar-desktop .navigation-left__dropdowns");if(t.length&&n.length){var a=t[0].getBoundingClientRect(),e=n[0].getBoundingClientRect(),o=a.left+a.width/2-e.x;$(".navbar-desktop .navigation-left__dropdowns-arrow").css({transform:"translateX(".concat(o,"px) rotate(45deg)")})}}(),e(),$(".navbar-desktop .navigation-left__item").on("mouseenter",function(t){t.stopPropagation();var n=$(t.currentTarget);if(n.hasClass("topcv-pro-item"))a();else{var e=$(".navbar-desktop .navigation-left__dropdowns"),o=$(".navbar-desktop .navigation-left__dropdowns-background");if(e.length&&o.length){var i="open-dropdown";n.offset().left,$(".navbar-desktop .navigation-left__item-wrapper").offset().left,$(".navbar-desktop .navigation-left__item-sub-menu").removeClass(i),$(".navbar-desktop .navigation-left__item").removeClass(i);var r=t.currentTarget.getBoundingClientRect(),s=r.left+r.width/2-e[0].getBoundingClientRect().x;$(".navbar-desktop .navigation-left__dropdowns-arrow").css({transform:"translateX(".concat(s,"px) rotate(45deg)")});var d=n.attr("data-dropdown-classname");if(d){var v=$(".navbar-desktop .navigation-left__item-sub-menu.".concat(d));if(v.length){var l=v[0].getBoundingClientRect(),f=(e[0].getBoundingClientRect(),Math.ceil(l.width)),g=Math.ceil(l.height),p=l.left;e.css({width:"".concat(f,"px"),height:"".concat(g,"px")}),o.css({transform:"translateX(".concat(p,"px)")}),e.addClass(i),v.addClass(i),n.addClass(i)}}}}}),$(".navbar-desktop .navigation-left-container").on("mouseleave",function(t){t.stopPropagation(),a()}),n=!0)}o(),$(window).on("resize",function(){clearTimeout(t),t=setTimeout(function(){o()},200)})});