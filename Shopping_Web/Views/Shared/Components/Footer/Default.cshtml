<style>
    /* Bọc toàn bộ phần liên hệ để có nền và đệm */
    .contact-page-wrapper {
        padding: 2px ;
        background-color: #f4f7f6; /* Một màu nền xám rất nhạt */
    }

    /* Tạo kiểu cho toàn bộ hàng (row) như một "thẻ" (card) lớn */
    .contact-card-row {
        background-color: #ffffff;
        border-radius: 12px;
        overflow: hidden; /* Quan trọng: để giữ các góc bo */
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.07);
        display: flex;
        flex-wrap: wrap;
    }

        /* Ghi đè các cột Bootstrap để đảm bảo chúng lấp đầy chiều cao */
        .contact-card-row > [class*="col-"] {
            display: flex;
            flex-direction: column;
        }

    /* --- Cột 1: Thông tin công ty (Logo & Mô tả) --- */
    .companyinfo {
        padding: 40px;
        text-align: center;
        background-color: #fff;
        height: 100%; /* Làm cho cột lấp đầy chiều cao */
    }

        .companyinfo img {
            width: 150px;
            height: 150px;
            border-radius: 50%; /* Logo hình tròn */
            object-fit: cover; /* Đảm bảo ảnh không bị méo */
            margin-bottom: 25px;
            border: 5px solid #f0f0f0;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .companyinfo h5 {
            font-size: 1rem;
            color: #6c757d; /* Màu xám dịu */
            font-style: italic;
            line-height: 1.6;
        }

    /* --- Cột 2: Bản đồ --- */
    /* Chúng ta cần nhắm mục tiêu vào cột chứa iframe */
    .map-column {
        padding: 15px; /* Ít đệm hơn để bản đồ lớn hơn */
        background-color: #fafafa;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 350px; /* Chiều cao tối thiểu cho bản đồ */
    }

        .map-column iframe {
            width: 100%;
            height: 100%; /* Lấp đầy cột */
            min-height: 400px;
            border: none;
            border-radius: 8px;
        }

    /* --- Cột 3: Thông tin liên hệ --- */
    .contact-info {
        padding: 40px;
        background-color: #f8f9fa; /* Nền có điểm nhấn nhẹ */
        height: 100%;
    }

        .contact-info h3 {
            font-size: 1.75rem;
            font-weight: 700;
            color: #2c3e50; /* Màu xanh đậm chuyên nghiệp */
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 3px solid #007bff; /* Đường gạch chân tạo điểm nhấn */
            display: inline-block; /* Làm cho đường gạch chân vừa với chữ */
        }

        .contact-info h4 {
            font-size: 1.1rem;
            font-weight: 600; /* Kiểu chữ cho "Label" (Nhãn) */
            color: #34495e; /* Màu chữ đậm hơn */
            margin-bottom: 25px;
        }

            .contact-info h4 span {
                font-weight: 400; /* Kiểu chữ cho "Value" (Giá trị) */
                color: #555;
                display: block; /* Hiển thị giá trị ở dòng tiếp theo */
                margin-top: 5px;
                font-size: 1.05rem;
            }

    /* --- Điều chỉnh cho di động --- */
    @@media (max-width: 767px) {
        .contact-card-row {
            box-shadow: none; /* Bỏ bóng đổ trên di động */
            border-radius: 0;
        }

        .companyinfo, .map-column, .contact-info {
            padding: 25px;
            /* Thêm đường viền để phân tách các phần khi xếp chồng */
            border-bottom: 1px solid #e9ecef;
        }

            .map-column iframe {
                min-height: 300px; /* Giảm chiều cao bản đồ trên di động */
            }
    }
</style>
@model Contact

<div class="contact-page-wrapper">
    <div class="container">

        <div class="row contact-card-row">

            <div class="col-sm-3">
                <div class="companyinfo">
                    <p><img src="~/media/Logo/@(Model.LogoImage)" width="200" height="200" /></p>
                    <h5>@Model.Description</h5>
                </div>
            </div>

            <div class="col-sm-5 col-md-5 map-column">
                @Html.Raw(Model.Map)
            </div>

            <div class="col-sm-4">
                <div class="contact-info">
                    <h3>Thông Tin Liên Hệ</h3>
                    <h4>Name: <span>@Model.Name</span></h4>
                    <h4>Phone Number: <span>@Model.Phone</span></h4>
                    <h4>Email: <span>@Model.Email</span></h4>
                </div>
            </div>

        </div>
    </div>
</div>