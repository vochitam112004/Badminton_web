
<h3>WishList</h3>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product image</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var wishlist in Model)
        {

            <tr class="ListProduct-Admin">
                <th scope="row">@(++count)</th>
                <td></td>
                <td>@item.Price.ToString("#,##0 VND")</td>
                <td><img src="~/media/Products/@item.ImageUrl" /></td>
                <td>@item.Category.CategoryName</td>
                <td>@item.Brand.BrandName</td>
                <td>@item.Quantity</td>
                <td>@item.ProductCode</td>
                <td>
                    <a asp asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Product" asp-route-ProductId="@item.ProductId">Edit</a>
                    <form asp-area="Admin" asp-controller="Product" asp-action="Delete" method="post" style="display:inline">
                        <input type="hidden" name="ProductId" value="@item.ProductId" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>
