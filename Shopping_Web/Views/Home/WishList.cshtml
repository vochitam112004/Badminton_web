
<h3>WishList</h3>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Product Name</th>
            <th scope="col">Product Description</th>
            <th scope="col">Product Price</th>
            <th scope="col">Product image</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var wishlist in Model)
        {

            <tr class="ListProduct-Admin">
                <th scope="row">@(++count)</th>
                <td>@wishlist.Product.ProductName</td>
                <td>@wishlist.Product.Description</td>
                <td>@wishlist.Product.Price.ToString("#,##0 VND")</td>
                <td><img src="~/media/Products/@wishlist.Product.ImageUrl" /></td>
                <td>
                    <form asp-controller="Home" asp-action="DeleteWishList" method="post" style="display:inline">
                        <input type="hidden" name="WishlistId" value="@wishlist.WishlistId" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Aret.you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
