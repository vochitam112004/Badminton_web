@model Shopping_Web.Models.Paginate
<div class="container">
    @if (Model.TotalPages > 0) //2 trang
    {
        <ul class="pagination justify-content-end">

            @if (Model.CurrentPage > 1)
            {
                <li class="Model-item">
                    <a class="Model-link" asp-action="@ViewData["Action"]"
                       asp-route-page="1">First</a>
                </li>
                <li class="Model-item">
                    <a class="Model-link" asp-action="@ViewData["Action"]"
                       asp-route-page="@(Model.CurrentPage - 1)">Previous</a>
                </li>
            }
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++) //1 = 1 <= 2
            {
                <li class="Model-item @(pge == Model.CurrentPage ? "active" : "")">
                    <a class="Model-link" asp-action="@ViewData["Action"]" asp-route-page="@pge">@pge</a>
                </li>


            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="Model-item">
                    <a class="Model-link" asp-action="@ViewData["Action"]"
                       asp-route-page="@(Model.CurrentPage + 1)">Next</a>
                </li>
                <li class="Model-item">
                    <a class="Model-link" asp-action="@ViewData["Action"]"
                       asp-route-page="@(Model.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</div>