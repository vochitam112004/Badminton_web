@model IEnumerable<Brands>
@{
    ViewData["title"] = "Brands Listed";
}
<h3>Brand List</h3>
<a class="btn btn-warning btn-light" asp-area="Admin" asp-action="Create"  asp-controller="Brand">Add Brand</a>
<table class="table" id="myTable">
    <thead>
        <tr>
            <th scope="col">No</th>
            <th scope="col">Brand Name</th>
            <th scope="col">Brand Discription</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var item in Model)
        {

            <tr class="ListProduct-Admin">
                <th scope="row">@(++count)</th>
                <td>@item.BrandName</td>
                <td>@item.Description</td>
                <td>
                    <a asp asp-action="Edit" class="btn btn-warning btn-sm" asp-controller="Brand" asp-route-BrandId="@item.BrandId">Edit</a>
                    <form asp-area="Admin" asp-controller="Brand" asp-action="Delete" method="post" style="display:inline">
                        <input type="hidden" name="BrandId" value="@item.BrandId" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>

                </td>
            </tr>
        }
    </tbody>
</table>