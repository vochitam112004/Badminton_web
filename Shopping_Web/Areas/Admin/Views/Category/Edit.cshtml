@model Categories
@{
    ViewData["title"] = "Edit Category";
}
<h3>Edit Category</h3>
<div class="col-md-9">
    <form asp-area="Admin" asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="CategoryId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Category Name</label>
            <input asp-for="CategoryName" class="form-control" />
            <span asp-validation-for="CategoryName" class="text-danger" />
        </div>
        <div class="form-group">
            <label>Category Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger" />
        </div>
        
        <div class="form-group">
            <button class="btn btn-primary">Submit Edit Category</button>
        </div>
    </form>
    <a  asp-action="Category">Back to Category List</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}